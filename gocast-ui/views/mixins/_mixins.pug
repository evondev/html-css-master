mixin menuItem(text, icon = '', href = "#")
  li.menu-item
    a.menu-link(href= href)
      span.menu-icon
        if icon
          case icon
            when 'icon-home'
              include ../icons/_icon-home
            when 'icon-chart'
              include ../icons/_icon-chart
            when 'icon-cube'
              include ../icons/_icon-cube
      span.menu-text= text

mixin toggle()
  label.toggle
    input(type="checkbox", name="")
    .toggle-main
      .toggle-spinner

mixin buttonPlay(icon = false)
  button.button.button--primary
    if icon
      include ../icons/_icon-play
    span Play Episode

